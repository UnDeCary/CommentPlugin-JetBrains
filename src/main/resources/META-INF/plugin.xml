<idea-plugin>
    <id>com.zlup.CommentSectionPlugin</id>

    <name>Comment Sections</name>

    <vendor url="https://github.com/UnDeCary">ZLUP</vendor>

    <description><![CDATA[
    <p>Comment Sections is a lightweight JetBrains plugin to create stylish, structured comment sections in your code.</p>
    <ul>
        <li><b>Single Line Comment:</b> Type <code>cmts &lt;text&gt;</code> or press <b>Ctrl+Alt+C</b></li>
        <li><b>Multi Line Comment:</b> Type <code>cmtm &lt;text&gt;</code> or press <b>Ctrl+Alt+N</b></li>
        <li>Customizable hotkeys via IDE Keymap settings</li>
        <li>Customizable comment symbols in plugin settings</li>
    </ul>
    <p>Perfect for making your code readable, organized, and visually appealing.</p>
    ]]></description>


    <actions>
        <action
            id="CommentSections.CreateSingleLineComment"
            class="com.zlup.commentsections.CreateSingleLineCommentAction"
            text="Create Single-Line Comment Section"
            description="Create Single-Line comment section">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C"/>
        </action>

        <action
                id="CommentSections.CreateMultiLineComment"
                class="com.zlup.commentsections.CreateMultiLineCommentAction"
                text="Create Multi-Line Comment Section"
                description="Create Multi-Line comment section">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt N"/>
        </action>
    </actions>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <enterHandlerDelegate implementation="com.zlup.commentsections.CommentCommandHandler"/>
        <applicationService serviceImplementation="com.zlup.commentsections.CommentSettings"/>
        <projectConfigurable instance="com.zlup.commentsections.CommentSettingsConfigurable"/>
    </extensions>
</idea-plugin>